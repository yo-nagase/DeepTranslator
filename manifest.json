{
  "manifest_version": 3,
  "name": "Deep Translator",
  "version": "1.0",
  "description": "ChatGPT APIを使用した高精度な翻訳と詳細な解説を提供する翻訳ツール",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/v1/chat/completions",
    "https://api.openai.com/v1/audio/speech"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "history.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [{
    "resources": ["icon.png", "welcome.html"],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "選択したテキストを翻訳"
    }
  }
}
